<Window x:Class="QuizApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Quiz App" Height="450" Width="300" Background="Green">
    <Grid>
        <TextBlock Text="QUIZ TIME" HorizontalAlignment="Center" VerticalAlignment="Top"
                   FontSize="35" FontWeight="Bold" Foreground="White" Margin="0,34,0,0"/>
        <TextBlock Text="Choose a game to play" HorizontalAlignment="Left" VerticalAlignment="Top"
                   FontSize="16" Foreground="White" Margin="74,101,0,0"/>

        <Button Content="Programming in C#" FontSize="20" FontWeight="DemiBold" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,152,0,0" Background="White" Click="ProgrammingQuiz_Click"/>
        <Button Content="Math: Linear Algebra" FontSize="20" FontWeight="DemiBold" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top"
                Background="White" Click="MathQuiz_Click" Margin="0,232,0,0"/>
        <Button Content="Games" FontSize="20" FontWeight="DemiBold" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,308,0,0" Background="White" Click="GamesQuiz_Click"/>
    </Grid>
</Window>
